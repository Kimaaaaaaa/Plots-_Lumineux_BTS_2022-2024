import QtQuick 2.15
import QtQuick.Controls 2.15

ApplicationWindow {
    visible: true
    width: 640
    height: 480
    color: "#BBFAFC"
    title: "S'inscrire"


    property string email: ""
    property string username: ""
    property string password: ""
    property string passwordconfirm: ""

    function authenticate() {

        if (username === "utilisateur" && password === "mot de passe") {
            console.log("Vous etes bien connecté");

        } else {
            console.log("La connexion a échoué");

        }
    }


    Rectangle {
        
        Text{
            x: 281
            y: 0
            font.pointSize: 15
            text: qsTr("S'inscrire")
            
        }

        Text {
            id: email
            x: 153
            y: 119
            text: qsTr("Email")
            font.pointSize: 12
        }
        
        Text {
            id: identifiant
            x: 153
            y: 172
            text: qsTr("identifiant")
            font.pointSize: 12
        }
        
        Text {
            id: motDePasse
            x: 153
            y: 224
            text: qsTr("mot de passe")
            font.pointSize: 12
        }
        
        Text {
            id: confirmermdp
            x: 89
            y: 275
            text: qsTr("confirmer mot de passe")
            font.pointSize: 12
        }



        anchors.fill: parent
        color: "#BBFAFC"

        Column {
            spacing: 10
            anchors.centerIn: parent

            TextField {
                placeholderText: "Email"
                text: email
                onTextChanged: username = text.trim()
            }

            TextField {
                placeholderText: "Identifiant"
                text: username
                onTextChanged: username = text.trim()
            }

            TextField {
                placeholderText: "********"
                text: password
                echoMode: TextInput.Password
                onTextChanged: password = text.trim()
            }

            TextField {
                placeholderText: "********"
                text: password
                echoMode: TextInput.Password
                onTextChanged: passwordconfirm = text.trim()
            }

            Button {

                text: "S'inscrire"
                onClicked: authenticate()
                
                background: Rectangle {
                color: parent.down ? "#FFB22A" :
                (parent.hovered ? "#FFB22A" : "#FFB22A")
                }

            }
        }
    }
}

